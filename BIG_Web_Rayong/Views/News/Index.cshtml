@model BIG.WEB.RY.MODEL.Content
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <!--New Ood-->

@for (int i = 0; i < Model.News.Count; i++)
{
    if (i % 2 == 0)
    {
        <section class="new_ood">
            <div class="inner_wrapper">
                <div class="container">
                    <div class="new_section">
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 pull-left"><img src="@Url.Content(Model.News[i].IMAGE_URL)" class="img-circle delay-03s animated wow zoomIn" alt=""></div>
                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 pull-left">
                                <div class="delay-01s animated fadeInDown wow animated">
                                    <h3>@Model.News[i].HTML_SUB_HEADER1</h3><br />
                                    <p>@Model.News[i].HTML_VALUE</p>
                              
                                </div>
                                <div class="work_bottom"> <span></span> <a href="#" class="readmore_new_btn">อ่านเพิ่มเติม...</a> </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    }
    else
    {
        <div class="clearfix"></div>
       
        <section class="new_even">
            <div class="inner_wrapper">
                <div class="container">
                    <div class="new_section">
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 pull-left"><img src="@Url.Content(Model.News[i].IMAGE_URL)" class="img-circle delay-03s animated wow zoomIn" alt=""></div>
                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 pull-left">
                                <div class="delay-01s animated fadeInDown wow animated">
                                    <h3>@Model.News[i].HTML_SUB_HEADER1</h3><br />
                                    <p>@Model.News[i].HTML_VALUE</p>
                                </div>
                                <div class="work_bottom"> <span></span> <a href="#" class="readmore_new_btn">อ่านเพิ่มเติม...</a> </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}


